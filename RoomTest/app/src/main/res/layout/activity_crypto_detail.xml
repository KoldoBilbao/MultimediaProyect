<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imagen de la Criptomoneda -->
        <ImageView
            android:id="@+id/crypto_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Nombre de la Criptomoneda -->
        <TextView
            android:id="@+id/crypto_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Grupo 1: Información General -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General Info"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/crypto_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symbol: btc"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/crypto_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: $104,783"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/crypto_market_cap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Market Cap: $2,075,290,297,503"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Grupo 2: Información de Suministro -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supply Info"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/crypto_max_supply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Supply: 21,000,000"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/crypto_circulating_supply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Circulating Supply: 19,813,503"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/crypto_supply_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supply Released: 94.35%"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Gráfico de Líneas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price History (Last 30 Days)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="16dp" />

        <!-- Botón de Volver -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
